[module/polypomo]
type = custom/script

exec = $HOME/.config/polybar/polypomo
tail = true

label = %output%
click-left = $HOME/.config/polybar/polypomo toggle
click-right = $HOME/.config/polybar/polypomo end
click-middle = $HOME/.config/polybar/polypomo lock
scroll-up = $HOME/.config/polybar/polypomo time +60
scroll-down = $HOME/.config/polybar/polypomo time -60

